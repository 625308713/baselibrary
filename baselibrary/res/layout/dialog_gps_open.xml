<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp" >

        <TextView
            android:id="@+id/dialog_network_tv_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/dialog_gps_info"
            android:textColor="@color/color_selector_blue"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_network_tv_info"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_gps_open_btn_enter"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/selector_btn_enter"
                android:text="@string/dialog_gps_open_btn_enter"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/dialog_gps_open_btn_cancle"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/selector_btn_cancel"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="@string/dialog_gps_btn_inside"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>